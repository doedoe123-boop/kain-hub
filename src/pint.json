{
    "preset": "laravel",
    "rules": {
        "concat_space": {
            "spacing": "none"
        },
        "ordered_imports": {
            "sort_algorithm": "alpha",
            "imports_order": ["const", "class", "function"]
        },
        "single_trait_insert_per_statement": true,
        "no_unused_imports": true,
        "not_operator_with_successor_space": true
    },
    "exclude": ["vendor", "storage", "bootstrap/cache"]
}
